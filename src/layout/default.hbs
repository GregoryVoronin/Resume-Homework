<!DOCTYPE html>
<html>

  <head>
    <title>
      Resume | {{title}}
    </title>
    <meta charset='utf-8' />
    <link href='css/index.css' rel='stylesheet' />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <header>
      {{#with header}}
        <div>
            <h1>
                {{#with name}}
                    {{firstname}} {{lastname}}
                {{/with}}
            </h1>
        </div>
        <div>
            <b>{{position}}</b>
            <div><em>{{salary}}</em></div>
            <br>
            <div><address>{{address}}</address></div>
        </div>
        <br>
        <hr>
      {{/with}}
    </header>

    {{>nav}}

    <main>
      {{{body}}}
    </main>

    {{>footer}}

  </body>
</html>