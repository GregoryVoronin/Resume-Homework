<!DOCTYPE html>
<html>

  <head>
    <title>
      Resume | {{title}} NEW
    </title>
    <meta charset='utf-8' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href='css/index.css' rel='stylesheet' />
  </head>

  <body>
    <div class="container">
      {{#with header}}
      <header class="p-2 mb-3 border rounded border-1 d-flex justify-content-between">
          <div class="nav-item">
              {{#with name}}
                  {{firstname}} {{lastname}}
              {{/with}}
          </div>
          <div>
              Resume Project
          </div>
      </header>
      {{/with}}
      <main class="mb3">
        {{{body}}}
      </main>

      <nav>
          {{#with nav}}
              {{>bs-btn btn-type="btn-primary" href=summaryPage.url text=summaryPage.text isLink=true}}
              {{>bs-btn btn-type="btn-primary" href=skillsPage.url text=skillsPage.text isLink=true}}
              {{>bs-btn btn-type="btn-primary" href=educationPage.url text=educationPage.text isLink=true}}
              {{>bs-btn btn-type="btn-primary" href=workPage.url text=workPage.text isLink=true}}
          {{/with}}
      </nav>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>