<div class="row">
    <div class="col-8">
        <input name="delivery" class="form-check-input" type="radio" {{#if @first}}checked{{/if}}>
        <label class="form-check-label">{{text}}</label>
        {{#if error}}
        <p class="form-text">{{error}}</p>
        {{/if}}
    </div>
    {{#if textSpan}}
    <div class="col-4">
        <p class="text-end">{{textSpan}}</p>
    </div>
    {{/if}}
</div>